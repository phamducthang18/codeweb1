<form method="post" action="/courses/{{course._id}}?_method=DELETE">
     <h3> Đặng khóa học</h3>
        <div class="mb-3" >
            <label for="name" class="form-label">Tên sản phẩm</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">
            <div id="name" class="form-text">đây là  tên sản phẩm bạn định xóa</div>
        </div>
        <div class="form-group">
            <label for="mota" class="form-label">Mô tả</label>
            <input type="text" class="form-control" value="{{course.mota}}" id="mota" name="mota">
            <div id="mota" class="form-text">đây là mô tả sản phẩm bạn định xóa</div>
        </div>
        <div class="form-group">
            <label for="slug" class="form-label">khí hiệu sản phẩm</label>
            <input type="text" class="form-control" value="{{course.slug}}" id="slug" name="slug">
            <div id="slug" class="form-text">đây là kí hiệu sản phẩm </div>
        </div>
        <button type="submit" class="btn btn-primary">xóa</button>
</form>